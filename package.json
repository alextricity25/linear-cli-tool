{
  "name": "linear-cli",
  "version": "0.1.0",
  "description": "A CLI tool for interacting with Linear using their TypeScript SDK",
  "main": "dist/index.js",
  "bin": {
    "linear": "./dist/index.js"
  },
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "lint": "eslint 'src/**/*.ts'",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "linear",
    "cli",
    "project-management",
    "issues"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@linear/sdk": "^9.0.2",
    "commander": "^11.1.0",
    "chalk": "^5.3.0",
    "inquirer": "^9.2.12",
    "conf": "^12.0.0",
    "ora": "^7.0.1",
    "date-fns": "^3.2.0"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  }
}